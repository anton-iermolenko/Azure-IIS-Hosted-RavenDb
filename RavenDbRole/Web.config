<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <add key="Raven/DataDir" value="~\Data" />
    <add key="Raven/AnonymousAccess" value="All" />
    <add key="Raven.Data.CloudContainerName" value="raven" />
    <add key="Raven.Data.CloudDriveName" value="DatabaseDrive.vhd" />
    <add key="Raven.Data.CloudDriveSize" value="200" />
    <add key="Raven.Data.CloudDriveReadCacheSize" value="200" />
  </appSettings>
  <system.web>
    <compilation debug="true" targetFramework="4.0" />
    <!-- There's no sense to specify because of default limitation of 16Kb in http.sys (http://support.microsoft.com/kb/820129)-->
    <httpRuntime maxQueryStringLength="17000" />
  </system.web>
  <system.webServer>
    <handlers>
      <add name="All" path="*" verb="*" type="RavenDbRole.Implementation.ForwardToRavenRespondersFactory, RavenDbRole" />
    </handlers>
    <modules>
      <remove name="WebDAVModule" />
    </modules>
    <security>
      <requestFiltering>
        <requestLimits maxQueryString="17000" />
      </requestFiltering>
    </security>
  </system.webServer>
  <runtime>
    <loadFromRemoteSources enabled="true" />
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <probing privatePath="Analyzers" />
    </assemblyBinding>
  </runtime>
</configuration>